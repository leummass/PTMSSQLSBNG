<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>error.log</file>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.crud.crud_sql_server.controller" level="ERROR">
        <appender-ref ref="FILE"/>
    </logger>
</configuration>